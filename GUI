package Smithing;
import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;



public class Maing extends JFrame{

    public Main ctx;
    public Maing(Main main) {
        this.ctx = main;
    }

    private JPanel MainP;
    private JTextField textField1;
    private JTextField textField2;
    private JButton startScriptButton;

    public Maing(String title){
        super(title);
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.setContentPane(MainP);
        this.pack();

        startScriptButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                ctx.setStartscript(true);
                ctx.setInput1(textField1.getText());
                ctx.setOutput1(textField2.getText());


            }
        });

    }
    public static void main(String[] args){
        JFrame frame = new Maing("Slime's Smither");
        frame.setVisible(true);
    }


}
